}
[data-entity][data-entity="date"] ~ [data-entity="date"]:after {
  opacity: 0;
}
[data-entity][data-entity="date"] ~ [data-entity="date"]:hover:after {
  opacity: 1;
}

.entities {
  font: 18px/2.5 Arial, sans-serif;
  padding: 25px 50px;
}

* {
  box-sizing: border-box;
  -webkit-font-smoothing: antialiased;
}